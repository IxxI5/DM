@* Navigation Bar *@
<div class="navbar-header">
    <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
        <a class="navbar-brand" href="/Home/">Home</a>
        <div class="collapse navbar-collapse" id="navbarColor02">
            <ul class="navbar-nav mr-auto">
                <li class="nav-item">
                    @Html.ActionLink("About", "About", "Home", routeValues: null, htmlAttributes: new { @class = "nav-link" })
                </li>
                <li class="nav-item">
                    @Html.ActionLink("Contact", "Contact", "Home", routeValues: null, htmlAttributes: new { @class = "nav-link" })
                </li>

                @Html.Partial("_LoginPartial")

            </ul>

            @{
                if (Model != null)
                {
                    var search = ViewData["search"];

                    if (search != null)
                    {
                        @* Search Form *@
                        <form class="form-inline my-2 my-lg-0">
                            <input class="form-control mr-sm-2" name="search" id="search" type="text" placeholder="Search" value="@search">
                            <button class="btn btn-secondary my-2 my-sm-0" type="submit">Search</button>
                        </form>
                    }
                }
            }
        </div>
    </nav>
</div>
